<div class="posts-wrapper">
  <div class="post">
    <div class="post-body">
      <div class="image-wrap">
        <h1 align="center">Update your profile</h1>
        <%= form_for @user, url: {action: 'update'}, html: { multipart: true } do |f| %>
            <%= render 'shared/error_message' %>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group text-center">
                  <h4>Change your profile image:</h4>
                    <%= profile_pic_select(@user, 'edit') %>
                  <%= f.file_field :image, onChange: 'loadFile(event)' %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group text-center">
                  <h4>Update your bio:</h4>
                  <%= f.text_area :bio, label: false, rows: 4, placeholder: 'Tell us a little about yourself...' %>
                </div>
              </div>
            </div>
            <div class="form-group text-center">
              <%= f.submit 'Update Profile', class: 'btn btn-main' %>
            </div>
            <div class="form-group text-center">
              <%= link_to 'Delete user', user_path, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>