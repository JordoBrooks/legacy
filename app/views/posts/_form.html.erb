<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@post) do |f| %>

        <%= f.label :image %>
        <%= f.file_field :image %>

        <%= f.label :caption %>
        <%= f.text_field :caption, class: 'form-control' %>

        <%= f.submit message, class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>